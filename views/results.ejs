  <div class="top-most-div " style="height: 900px;">
        <div>
            <h1 style="margin-bottom: 50px;">Available Trains between these stations are  </h1>
            <form  class = "form_login" action="/results" method = "post">
            <table style="border:1px solid black;margin-left:auto;margin-right:auto; margin-bottom: 10px;"> 
                <tr><td>Select</td><td>Train Name</td><td>Train Number</td><td>Source</td><td>Destination</td><td>Source Time</td><td>Destination Time</td><td>Fare</td><td>Seats Available</td></tr>
                <% for (var i = 0; i < value.length; i++) { %>
                        <tr>
                            <td><input type="radio" name="check" value = "<%= value[i].train_no %>" ></td>
                            <td><%= value[i].train_name %></td>
                            <td><%= value[i].train_no %></td>
                            <td><%= value[i].source %></td>
                            <td><%= value[i].destination %></td>
                            <td><%= value[i].source_time %></td>
                            <td><%= value[i].destination_time %></td>
                            <td><%= value[i].fare %></td>
                            <td><%= value[i].available_seats %></td>
                        </tr>
                    
                <% } %>
            </table>
        </hr>
            <button class = "button" id = "btn" type="submit">Book</button>
            </form>
    </div>
